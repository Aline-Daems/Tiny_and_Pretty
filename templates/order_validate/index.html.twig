{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande{% endblock %}

{% block content %}

<div class="container-fluid mt-4 ">
    <div class="card text-center shadow p-3 mb-5 bg-body rounded">
        <div class="card-body">
            <h2 class="card-title title-concept">Confirmation de commande</h2>

            <span class="presentation-concept">
               <p> Bonjour {{ order.user.firstname }}, </p>
               <p> Nous vous remercions pour votre commande {{ order.reference }}</p>
               <p>  Une confirmation vous a été envoyée à l'adresse {{ order.user.email }}</p>
               <p>  Votre commande sera livrée par {{ order.carrierName }} à l'adresse suivante : </p>
                {{ order.delivery|raw }}

            </span>
        </div>
    </div>
            <hr>
    <a href="{{ path('account_order') }}"><button class="profite-btn"> Récapitulatif de ma commande</button></a>

</div>
{% endblock %}
