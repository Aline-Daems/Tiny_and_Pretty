{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="title pt-5">
                    Confirmation de commande
                </h1>
                    <div class="col-10 text-left pt-5">
                        <div class="presentation">
                            <p>
                                Bonjour {{ order.user.firstname }}, <br/>
                                Nous vous remercions pour votre commande <i class="font-weight-bold">{{ order.reference }}</i> <br/>
                                Une confirmation vous a été envoyée à l'adresse <i class="font-weight-bold">{{ order.user.email }} </i> <br/>
                                Votre commande sera livrée par <i class="font-weight-bold text-uppercase"> {{ order.carrierName }} </i> à l'adresse suivante : <br/>
                               <p class="text-center"> {{ order.delivery|raw }}</p>

                                <p class="text-center">Pour suivre votre commande rendez vous dans votre <a href="{{ path('account_order') }}" class="font-weight-bold">compte</a></p>
                            </p>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
