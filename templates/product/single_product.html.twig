<div class="product-item text-center mb-5">

    <a href="{{ path('product', {'slug':product.slug}) }}">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        <div>
            {% if is_granted('ROLE_USER') %}
                {% set isFavorite = false %}
                {% for favoris in product.favoris  %}

                    {% if favoris.id == app.user.id %}
                        {% set isFavorite = true %}
                    {% endif %}
                {% endfor %}

                {% if isFavorite %}

                    <a href="{{ path('retrait_favoris', {id: product.id}) }}"> <i class="fas fa-heart"></i></a>

                {% else %}

                    <a href="{{ path('ajout_favoris', {id: product.id}) }}"> <i class="far fa-heart"></i></a>

                {% endif %}

            {% else %}
                <i class="far fa-heart"></i>
            {% endif %}
        </div>
    </a>

    <div class="descriptionBest">
        <p class="product-text"><span>{{ product.name }}</span></p>
        <p class="product-text"><span class="product-subtitle"> {{ product.subtitle }} </span></p>


        <p class="product-price-text"><span class="product-price"> {{ (product.price / 100)|number_format(2,',', '.') }} â‚¬ </span></p>

    </div>
</div>
