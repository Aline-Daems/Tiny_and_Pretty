                </li>
                <li class="nav-item active">
                    <a class="nav-link link-home" href="{{ path('products') }}">Deuxième vie</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link link-home" href="{{ path('products') }}">Notre concept</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link link-home" href="{{ path('products') }}">Tiny World</a>
                </li>
            </ul>

            <div class="navbar-item-custom icon-nav">
            {% if app.user %}
                <a href="{{ path('account') }}" class="link-home"><i class="far fa-user-circle"></i>{{ app.user.firstname }}</a>
                <a href="{{ path('app_logout') }}" class="text-dark"><i class="fas fa-sign-out-alt"></i></a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-dark"><i class="far fa-user-circle"></i></a>
                <a href="" class="text-dark"><i class="far fa-heart"></i></a>
                <a href="" class="text-dark"><i class="fas fa-search"></i></a>
                <a href="{{ path('register') }}" class="text-dark"><i class="fas fa-sign-in-alt"></i></a>

            {% endif %}
            </div>
            <a href="{{ path('cart') }}" class="cart text-dark">
                <i class="fas fa-shopping-bag"></i>
            </a>
        </div>

    </nav>
    <div class="orange-nav">
        <p>Echanges et retour - 60 jours</p>
