{% extends 'base.html.twig' %}

{% block title %}Erreur de paiement{% endblock %}

{% block content %}
    <div class="container-fluid mt-4 ">
        <div class="card text-center shadow p-3 mb-5 bg-body rounded">
            <div class="card-body">
                <h2 class="card-title title-concept">Erreur de paiement</h2>

                <span class="presentation-concept">

                    <p> Bonjour {{ order.user.firstname }}</p>
                    <p>Votre paiement a échoué pour votre commande {{ order.reference }} </p>
                    <p>Une confirmation vous a été envoyée à l'adresse {{ order.user.email }}</p>

                 </span>
            </div>
        </div>


        <a href="{{ path('order') }}" class="btn btn-success">
            <button class="profite-btn">Repasser commande</button>
        </a>
    </div>
{% endblock %}
